<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="7dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="79dp"
            android:layout_height="89dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="19dp"
            app:srcCompat="@drawable/bloco3" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="106dp"
            android:layout_marginStart="106dp"
            android:layout_marginTop="32dp"
            android:text="Para:" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView27"
            android:layout_marginTop="94dp"
            android:text="Titulo:"
            android:layout_alignLeft="@+id/textView27" />

        <TextView
            android:id="@+id/campoPara"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView27"
            android:layout_marginEnd="9dp"
            android:text="TextView"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/campoTitulo"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/campoPara"
            android:layout_alignStart="@+id/campoPara"
            android:layout_alignTop="@+id/textView28"
            android:text="TextView" />

        <Space
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginTop="145dp"
            android:layout_alignLeft="@+id/imageView2" />

    </RelativeLayout>

</android.support.v7.widget.CardView>